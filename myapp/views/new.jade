extends layout 

block content 

  div.container
    div.header
      p.title.leftier #{title}
    fieldset.newform(method='POST')
      legend #{formTitle}
      div.form-group
        label(for="name") Name
        input.form-control(type="text" name="name" id="name" placeholder="" value="#{name}")
      div.form-group
        label(for="location") Location
        input.form-control(type="text" name="location" id="location" placeholder="" value="#{location}")
